<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anjana.binmaster.Complains">


    <EditText
        android:id="@+id/txtComplins"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/textview_shape_ovel"
        android:ems="10"
        android:hint="Type Your Complains here."
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnSendComplain"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/button_shape_ovel"
        android:text="Send"
        android:textColor="@color/common_signin_btn_dark_text_default"
        android:layout_below="@+id/txtComplins"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/complainList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_below="@+id/textView17"
        android:background="@drawable/textview_shape_ovel"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="200dp"
        android:layout_height="30dp"


        android:text="Complains Sent"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_below="@+id/textView24"
        android:layout_alignLeft="@+id/btnSendComplain"
        android:layout_alignStart="@+id/btnSendComplain"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/btnSendComplain"
        android:layout_alignStart="@+id/btnSendComplain"
        android:layout_below="@+id/btnSendComplain"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:text=""
        />
</RelativeLayout>

